generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Area {
  id Int @id @default(autoincrement())

  name   String @unique
  nameEn String 
  nameAr String

  cities City[]
}

model City {
  id Int @id @default(autoincrement())

  name   String @unique
  nameEn String
  nameAr String

  countdown Int

  time   String
  timeEn String
  timeAr String

  areaId Int
  area Area @relation(fields: [areaId], references: [id])

  alerts AlertLocations[]
}

model Alert {
  id   Int @id @default(autoincrement())
  date DateTime @default(now())

  typeId Int
  type AlertType @relation(fields: [typeId], references: [id])

  cities AlertLocations[]
}

// enum alertType{
