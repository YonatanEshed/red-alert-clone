model AlertType{
  id Int @id @default(autoincrement()) 

  name String @unique
  nameEn String
  nameAr String

  alerts Alert[]
}

model AlertLocations {
  alertId Int
  alert   Alert @relation(fields: [alertId], references: [id])

  cityId Int
  city   City @relation(fields: [cityId], references: [id])

  @@id([cityId, alertId])
}